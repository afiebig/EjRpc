<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="30dp"
        android:text="Servicios"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/txtLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="16dp"
        android:text="Tecnologias de la Información"
        android:textColor="@android:color/darker_gray"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/txtLabel3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="16dp"
        android:text="Contamos con la expertiz para planificar y gestionar las distintas tecnologías de la información en mención a las necesidades que tenga su compañía.
Ponemos a su disposición los distintos componentes, tanto como los profesionales con experiencias y buenas prácticas, asumiendo la responsabilidad de la selección de productos de hardware y software adecuados para una organización."
        android:textColor="@android:color/darker_gray"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>

    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLabel"
        android:src="@drawable/serv_ti"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

</LinearLayout>
